
<% if @games.length == 0%>
  <form action='/games' method="post">
    <input type="hidden" name="authenticity_token" value="form_authenticity_token">
    <button>Generate Draw</button>
  </form>
<% end %>

<div class="draw-container">
  
  <% if @games%>
    <%idx = 0%>
    <% @games.each do |game|%>
      <div class="draw-row">
        <% #binding.pry %>
        <div><%= @games[idx].players[0].name %></div>
        <div>Vs</div>
        <div><%= @games[idx].players[1].name %></div>
        <div>
          <form action="/games/<%=game.id%>" method="get">
            <button>Start Game</button>
          </form>
        </div>
      </div>
      <%idx += 1%>
    <%end %>
  <% end %>
</div> 



