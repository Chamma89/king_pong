<!-- <h1>King Pong Home</h1> -->

<div class="container">
  <div class="row">
    <div class="col">
      <div class="jumbotron" style="height: 250px; padding: 30px;">
        <h1 class="display-5 text-center">King Pong Home</h1>
        <p class="lead text-center">Take a look at your competitors or go straight to the game draw</p>
        <hr class="my-4">
        <div class="row">
          <div class="col-3"></div>
          <div class="col-4">
            <p class="lead">
              <a class="btn btn-primary btn-lg" href="/players" role="button">Player Pool</a>
            </p>
          </div>
          <div class="col-4">
            <p class="lead">
              <a class="btn btn-primary btn-lg" href="/games" role="button">Game Draw</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <h4>Recent games</h4>
      <table class="table table-striped">
        <!-- <thead> <tr> <th scope="col"></th> <th scope="col">P1</th> <th scope="col">P2</th> <th scope="col">Winner</th> </tr> </thead> -->
        <tbody>
          <tr>
            <td>Player 1</td>
            <td>beat</td>
            <td>Player 2</td>
          </tr>
          <tr>
            <td>Player 1</td>
            <td>lost to</td>
            <td>Player 2</td>
          </tr>
          <tr>
            <td>Player 1</td>
            <td>beat</td>
            <td>Player 2</td>
          </tr>
          <tr>
            <td>Player 1</td>
            <td>beat</td>
            <td>Player 2</td>
          </tr>
          <tr>
            <td>Player 1</td>
            <td>beat</td>
            <td>Player 2</td>
          </tr>
        </tbody>
      </table>
      <hr>

        <!-- Fouad's twitter playground -->

    </div>
    <div class="col-8">
      <h4>Leaderboard</h4>
      <table class="table table-striped table-dark">
        <thead>
          <tr>
            <th scope="col">Rank</th>
            <th scope="col"></th>
            <th scope="col">Name</th>
            <th scope="col">Nickname</th>
            <th scope="col">Score</th>
          </tr>
        </thead>
        <tbody class="rankings">
          <% @topPlayers.each do |player| %>
            <tr>
              <th scope="row"><%= @playerRank += 1 %></th>
              <td><img src="<%= player.image_url %>" style="height: 35px; width: 35px;"></td>
              <td><%= player.name %></td>
              <td><%= player.nickname %></td>
              <td><%= player.score %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
